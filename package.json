{
  "dependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "chart.js": "^4.4.9",
    "htmx.org": "^1.9.12",
    "tailwindcss": "^3.3.5"
  },
  "scripts": {
    "build:css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css",
    "watch:css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --watch",
    "minify:css": "tailwindcss -i ./src/input.css -o ./static/css/tailwind.css --minify",
    "build:js": "esbuild ./src/js/main.js --bundle --outfile=./static/js/main.js",
    "watch:js": "esbuild ./src/js/main.js --bundle --outfile=./static/js/main.js --watch",
    "minify:js": "esbuild ./src/js/main.js --bundle --minify --outfile=./static/js/main.js",
    "build": "npm run minify:css && npm run minify:js",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"go run ./cmd/server\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.4"
  }
}
